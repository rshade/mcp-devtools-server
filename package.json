{
  "name": "mcp-devtools-server",
  "version": "0.2.0",
  "type": "module",
  "description": "MCP server for common development tools (make, lint, test) with Context7 integration",
  "main": "dist/index.js",
  "bin": {
    "mcp-devtools-server": "dist/index.js"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc && node -e \"require('fs').cpSync('src/instructions.md', 'dist/instructions.md')\"",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules --ignore docs",
    "lint:yaml": "yamllint '**/*.yml' '**/*.yaml' || echo 'YAML linting skipped - yamllint not available'",
    "lint:changelog": "grep -q 'Keep a Changelog' CHANGELOG.md && echo 'CHANGELOG.md follows Keep a Changelog format'",
    "lint:commit": "commitlint --edit",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "clean": "rm -rf dist",
    "docs:api": "typedoc --out typedoc",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "devtools",
    "development-tools",
    "test",
    "ai-assistant",
    "claude",
    "plugin-system",
    "smart-suggestions",
    "cache-optimization"
  ],
  "author": "Richard Shade",
  "license": "Apache-2.0",
  "homepage": "https://rshade.github.io/mcp-devtools-server",
  "repository": {
    "type": "git",
    "url": "https://github.com/rshade/mcp-devtools-server.git"
  },
  "bugs": {
    "url": "https://github.com/rshade/mcp-devtools-server/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "context7": "^1.0.0",
    "dotenv": "^17.2.3",
    "execa": "^9.0.0",
    "glob": "^12.0.0",
    "lru-cache": "^11.2.2",
    "semver": "^7.7.3",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@metamask/auto-changelog": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "husky": "^9.0.0",
    "jest": "^30.0.0",
    "markdownlint-cli": "^0.45.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "vitepress": "^2.0.0-alpha.12",
    "vue": "^3.5.22"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "overrides": {
    "js-yaml": "^4.1.1",
    "jest": {
      "glob": "^11.1.0"
    },
    "markdownlint-cli": {
      "glob": "^11.1.0"
    }
  }
}
