{
  "name": "mcp-devtools-server",
  "version": "1.0.0",
  "description": "MCP server for common development tools (make, lint, test) with Context7 integration",
  "main": "dist/index.js",
  "bin": {
    "mcp-devtools-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src --ext .ts",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "lint:yaml": "js-yaml-cli '**/*.yml' '**/*.yaml' --ignore=node_modules/**",
    "test": "jest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "mcp",
    "devtools",
    "make",
    "lint",
    "test",
    "context7"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.7.0",
    "context7": "^1.0.0",
    "execa": "^8.0.1",
    "glob": "^10.3.10",
    "winston": "^3.11.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/glob": "^8.1.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "js-yaml-cli": "^0.6.0",
    "markdownlint-cli": "^0.45.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
